{
  "extends": "@jwilsson/tsconfig/tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,
    "resolveJsonModule": true,
    "module": "esnext"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
